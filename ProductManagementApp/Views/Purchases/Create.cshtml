@model ProductManagementApp.ViewModels.PurchasesViewModel
@{
    ViewData["Title"] = "Создать закупку";
}

<h4>Выберите поставщика и магазин, куда поставлять товар:</h4>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="control-label">Магазины</label>
            <select class="custom-select form-group"
                    asp-for="StoreId" asp-items="@(new SelectList(Model.Stores, "Id", "Name"))">
            </select>
            <label class="control-label">Постващики</label>
            <select class="custom-select form-group"
                    asp-for="SupplierId" asp-items="@(new SelectList(Model.Suppliers, "Id", "Name"))">
            </select>
            <div class="form-group">
                <input type="submit" value="Выбрать" id="btnSubmit" class="btn btn-primary" />
            </div>
            <hr />
        </form>
        @if (Model.Products != null)
        {
            <form asp-action="Add">
                <h4>Выберите нужные товары из списка:</h4>
                <table>
                    <tr>
                        <td>
                            <select class="custom-select form-group allProducts" style="width: 300px;" size="10" multiple
                                    asp-for="ProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))">
                            </select>
                        </td>
                        <td>
                            <div class="m-2">
                                <div id="btnAdd" class="btn btn-info rounded"> + </div>
                                <div id="btnRemove" class="btn btn-secondary rounded"> - </div>
                            </div>
                        </td>
                        <td>
                            <select class="choosenProducts" style="width: 300px;" name="choosenProducts" size="10" multiple>
                            </select>
                        </td>
                    </tr>
                </table>
                <input hidden asp-for="StoreId" />
                <input hidden asp-for="SupplierId" />
                <div class="form-group">
                    <input type="submit" value="Завершить заказ" id="btnSubmit" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        $('#btnAdd').click(function () {
            var options = $('select.allProducts option:selected').sort().clone();
            $('select.choosenProducts').append(options);
            $('select.allProducts option:selected').remove();

            $('select.choosenProducts option').prop("selected", true);
        });
        $('#btnRemove').click(function () {
            var options = $('select.choosenProducts option:selected').sort().clone();
            $('select.allProducts').append(options);
            $('select.choosenProducts option:selected').remove();

            $('select.choosenProducts option').prop("selected", true);
        });
    </script>
}
